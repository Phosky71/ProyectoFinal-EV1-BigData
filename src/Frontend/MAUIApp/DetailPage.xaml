<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.MAUIApp.DetailPage"
             Title="Card Detail">
    <VerticalStackLayout Spacing="10" Padding="20">
        <Entry x:Name="txtName" Placeholder="Name"/>
        <Entry x:Name="txtType" Placeholder="Type"/>
        <Entry x:Name="txtMana" Placeholder="Mana Cost"/>
        <Button Text="Save" Clicked="Save_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
