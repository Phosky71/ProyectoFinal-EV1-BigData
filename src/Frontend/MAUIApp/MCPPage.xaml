<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.MAUIApp.MCPPage"
             Title="MCP Chat">
    <Grid RowDefinitions="*,Auto" Padding="10">
        <Editor x:Name="txtHistory" IsReadOnly="True" />
        <HorizontalStackLayout Grid.Row="1" Spacing="10">
            <Entry x:Name="txtInput" Placeholder="Ask something..." HorizontalOptions="FillAndExpand" WidthRequest="250"/>
            <Button Text="Send" Clicked="Send_Clicked"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
