<Window x:Class="Frontend.WPFApp.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detail View" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Name"/>
        <TextBox Name="txtName"/>
        <TextBlock Text="Type"/>
        <TextBox Name="txtType"/>
        <TextBlock Text="Mana Cost"/>
        <TextBox Name="txtMana"/>
        <Button Content="Save" Margin="0,20,0,0" Click="Save_Click"/>
    </StackPanel>
</Window>
