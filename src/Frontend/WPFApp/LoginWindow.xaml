<Window x:Class="Frontend.WPFApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Username:"/>
        <TextBox Name="txtUsername" Text="admin"/>
        <TextBlock Text="Password:" Margin="0,10,0,0"/>
        <PasswordBox Name="txtPassword"/>
        <Button Content="Login" Margin="0,20,0,0" Click="Login_Click"/>
    </StackPanel>
</Window>
