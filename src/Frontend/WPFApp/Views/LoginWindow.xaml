<Window x:Class="Frontend.WPFApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Proyecto Final" Height="300" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Magic: The Gathering - Login" 
                   FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

        <Label Grid.Row="2" Content="Usuario:"/>
        <TextBox Grid.Row="2" Name="txtUsername" Margin="80,0,0,0" Text="admin"/>

        <Label Grid.Row="4" Content="Password:"/>
        <PasswordBox Grid.Row="4" Name="txtPassword" Margin="80,0,0,0"/>

        <TextBlock Grid.Row="6" Name="txtError" Foreground="Red" 
                   HorizontalAlignment="Center" TextWrapping="Wrap"/>

        <Button Grid.Row="8" Name="btnLogin" Content="Iniciar Sesion" 
                Width="120" Height="30" Click="Login_Click"/>
    </Grid>
</Window>
