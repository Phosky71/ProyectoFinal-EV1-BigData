<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!-- Configuracion de la aplicacion -->
  <appSettings>
    <!-- Sistema de persistencia: MySQL o Memory -->
    <add key="PersistenceSystem" value="MySQL" />
    
    <!-- Configuracion de la API -->
    <add key="ApiBaseUrl" value="https://localhost:5001" />
    
    <!-- Configuracion JWT -->
    <add key="JwtSecretKey" value="TU_CLAVE_SECRETA_AQUI" />
    <add key="JwtIssuer" value="ProyectoFinalEV1" />
    <add key="JwtAudience" value="ProyectoFinalEV1Users" />
    <add key="JwtExpirationMinutes" value="60" />
    
    <!-- Configuracion MCP/IA -->
    <add key="OpenAI_ApiKey" value="TU_API_KEY_AQUI" />
    <add key="LLM_Model" value="gpt-4" />
  </appSettings>
  
  <connectionStrings>
    <!-- Cadena de conexion MySQL -->
    <add name="MySQLConnection" 
         connectionString="Server=localhost;Database=proyecto_ev1;User=root;Password=;" 
         providerName="MySql.Data.MySqlClient" />
  </connectionStrings>
</configuration>
